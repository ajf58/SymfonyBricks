{% extends 'BricksSiteBundle::layout.html.twig' %}

{% block main %}

    <div id="brick-show-wrapper">

        <div class="row">
            <div class="span12">
            
                <h1>{{ brick.title }}</h1>
                
                <p class="description">{{ brick.description }}</p>
                
                <hr>
                    <i class="icon-user"></i> {{ brick.user }}
                    |
                    <i class="icon-calendar"></i> last update: {{ brick.updatedAt|date('d/m/Y') }}
                    
                    
                    <a href="https://twitter.com/share" class="twitter-share-button pull-right"
                        data-url="{{ app.request.uri }}"
                        data-text="{{ brick.title }} {{ app.request.uri }}"
                        data-via="SymfonyBricks"
                    >
                        Tweet
                    </a>
                <hr>
                
                <div class="content">
                    {{ brick.content|markdown }}
                </div>
            
            </div>
        </div>
        
    </div>
    
{% endblock %}